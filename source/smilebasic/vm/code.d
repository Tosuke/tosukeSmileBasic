module tosuke.smilebasic.vm.code;

/*
# バイトコード表
0xnnnx
x<-命令種別
0x0|Command
0x1|Push
0x2|Pop

## Command
0bnxx0
xx<-種別
0x00|UnaryOperator
0x01|>BinaryOparator
0x02|>
0x03|IndexOperator
0x04|CreateArray
0x06|Call Function(Common)
0x07|Call Function(Local)
0x08|Call command statement
0x09|def start(ローカル変数の確保)
0x0A|def end(ローカル変数の開放)
0x0B|return
0x10|goto
0x11|gosub
0x12|if goto
0x13|if gosub
0x14|on goto
0x15|on gosub
0x16|string goto
0x17|string gosub

### UnaryOperator
0xm000 UnaryOperator
m<-種別
0x0|OpNeg
0x1|OpNot
0x2|OpLogicalNot

### BinaryOparator
0xm010 BinaryOparator1
m<-種別
0x0|OpMul
0x1|OpDiv
0x2|OpIntDiv
0x3|OpMod
0x4|OpAdd
0x5|OpSub
0x6|OpLShift
0x7|OpRShift
0x8|OpAnd
0x9|OpOr
0xA|OpXor

0xm020 BianryOperator2
m<-種別
0x0|OpEq
0x1|OpNotEq
0x2|OpLess
0x3|OpGreater
0x4|OpLessEq
0x5|OpGreaterEq

### CreateArray
0xm040 indexNum
m<-種別
0x0|Integer
0x1|Floater
0x2|String

### Call command statement
0xm080 CallCmd imm16(argument num)
m<-種別
0x0|Print

## Push
0x00x1
x<-種別
0x0|imm16
0x1|imm32
0x2|imm64f
0x3|string
0x4|var16(global)
0x5|var32(global)

### Push string
0x0031 PushStr wchar...nullChar

## Pop
0x00x2
x<-種別
0x0|none
0x1|var16(global)
0x2|var32(global)
*/
alias VMCode = ushort;
